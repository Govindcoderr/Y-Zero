[
  {
    "name": "workflow.scheduleTrigger",
    "displayName": "Schedule Trigger",
    "description": "Trigger workflow on a schedule using cron expressions",
    "version": 1,
    "group": [
      "trigger"
    ],
    "properties": [
      {
        "name": "rule",
        "value": "0 * * * *"
      }
    ]
  },
  {
    "name": "workflow.httpRequest",
    "displayName": "Fetch Weather Data",
    "description": "Make HTTP requests to APIs and webhooks",
    "version": 1,
    "group": [
      "transform"
    ],
    "properties": [
      {
        "name": "url",
        "value": "https://api.weatherapi.com/v1/current.json?key=YOUR_API_KEY&q=London"
      },
      {
        "name": "method",
        "value": "GET"
      }
    ]
  },
  {
    "name": "workflow.set",
    "displayName": "Extract Condition",
    "description": "Set values and transform data",
    "version": 1,
    "group": [
      "transform"
    ],
    "properties": [
      {
        "name": "weatherStatus",
        "value": "{{ $node[\"Fetch Weather Data\"].body.current.condition.text }}"
      }
    ]
  },
  {
    "name": "workflow.if",
    "displayName": "Check for Rain",
    "description": "Conditional routing based on expressions",
    "version": 1,
    "group": [
      "transform"
    ],
    "properties": [
      {
        "name": "conditions",
        "value": {
          "logic": "contains",
          "variable": "weatherStatus",
          "value": "Rain"
        }
      }
    ]
  },
  {
    "name": "workflow.emailSend",
    "displayName": "Send Rain Alert",
    "description": "Send emails via SMTP",
    "version": 1,
    "group": [
      "output"
    ],
    "properties": [
      {
        "name": "toEmail",
        "value": "user@example.com"
      },
      {
        "name": "subject",
        "value": "Weather Alert: Grab an Umbrella! â˜”"
      },
      {
        "name": "text",
        "value": "The hourly check shows rain in your area. Current condition: {{ weatherStatus }}."
      }
    ]
  }
]